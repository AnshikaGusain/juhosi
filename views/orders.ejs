<%- include('partials/header') %>
<div class="container mt-5">
    <div class="row">
        <div class="card">
            <div class="card-body order">
                <h2 class="centered">Orders Form</h2>
                <form name="orderForm" action="/submitOrder" method="post" onsubmit="return validateForm()">
                    <div class="form-group">
                        <label for="orderDate">Order Date:</label>
                        <input type="date" class="form-control" id="orderDate" name="orderDate" required>
                    </div>
                    <div class="form-group">
                        <label for="company">Company:</label>
                        <input type="text" class="form-control" id="company" name="company" required>
                    </div>
                    <div class="form-group">
                        <label for="owner">Owner:</label>
                        <input type="text" class="form-control" id="owner" name="owner" required>
                    </div>
                    <div class="form-group">
                        <label for="item">Item:</label>
                        <input type="text" class="form-control" id="item" name="item" required>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" required>
                    </div>
                    <div class="form-group">
                        <label for="weight">Weight:</label>
                        <input type="number" class="form-control" id="weight" name="weight" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label for="shipmentRequest">Request for Shipment:</label>
                        <input type="text" class="form-control" id="shipmentRequest" name="shipmentRequest" required>
                    </div>
                    <div class="form-group">
                        <label for="trackingId">Tracking ID:</label>
                        <input type="text" class="form-control" id="trackingId" name="trackingId" required>
                    </div>
                    <div class="form-group">
                        <label for="shipmentSize">Shipment Size (L x B x H):</label>
                        <input type="text" class="form-control" id="shipmentSize" name="shipmentSize" required>
                    </div>
                    <div class="form-group">
                        <label for="boxCount">Box Count:</label>
                        <input type="number" class="form-control" id="boxCount" name="boxCount" required>
                    </div>
                    <div class="form-group">

                        <label for="specification">Specification:</label>
                        <input type="text" class="form-control" id="specification" name="specification" required>
                    </div>
                    <div class="form-group">

                        <label for="checklistQuantity">Checklist Quantity:</label>
                        <input type="text" class="form-control" id="checklistQuantity" name="checklistQuantity" required>
                    </div>

                    <input type="submit" class="btn btn-dark" value="Submit Order">
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        // Validate company (only alphanumeric characters)
        var company = document.forms["orderForm"]["company"].value;
        var companyRegex = /^[a-zA-Z0-9\s]+$/;
        if (!company.match(companyRegex)) {
            alert("Company name must contain only alphanumeric characters");
            return false;
        }

        // Validate owner (only alphanumeric characters)
        var owner = document.forms["orderForm"]["owner"].value;
        var ownerRegex = /^[a-zA-Z0-9\s]+$/;
        if (!owner.match(ownerRegex)) {
            alert("Owner name must contain only alphanumeric characters");
            return false;
        }

        // Validate item (only string characters)
        var item = document.forms["orderForm"]["item"].value;
        var itemRegex = /.*/;
        if (!item.match(itemRegex)) {
            alert("Item must contain only string characters");
            return false;
        }

        // Validate quantity (only integer values)
        var quantity = document.forms["orderForm"]["quantity"].value;
        if (isNaN(quantity) || quantity < 1 || !Number.isInteger(Number(quantity))) {
            alert("Quantity must be a positive integer");
            return false;
        }

        // Validate weight (only float values)
        var weight = document.forms["orderForm"]["weight"].value;
        if (isNaN(weight) || weight <= 0 || !Number(weight)) {
            alert("Weight must be a positive float value");
            return false;
        }

        // Validate request for shipment (only string characters)
        var shipmentRequest = document.forms["orderForm"]["shipmentRequest"].value;
        var shipmentRequestRegex = /.*/;
        if (!shipmentRequest.match(shipmentRequestRegex)) {
            alert("Request for shipment must contain only string characters");
            return false;
        }

        // Validate tracking ID (only string characters)
        var trackingId = document.forms["orderForm"]["trackingId"].value;
        var trackingIdRegex = /.*/;
        if (!trackingId.match(trackingIdRegex)) {
            alert("Tracking ID must contain only string characters");
            return false;
        }

        // Validate shipment size (in format L x B x H)
        var shipmentSize = document.forms["orderForm"]["shipmentSize"].value;
        var shipmentSizeRegex = /^[0-9]+\s*x\s*[0-9]+\s*x\s*[0-9]+$/;
        if (!shipmentSize.match(shipmentSizeRegex)) {
            alert("Shipment size must be in the format L x B x H (e.g., 10 x 5 x 8)");
            return false;
        }

        // Validate box count (only integer values)
        var boxCount = document.forms["orderForm"]["boxCount"].value;
        if (isNaN(boxCount) || boxCount < 1 || !Number.isInteger(Number(boxCount))) {
            alert("Box count must be a positive integer");
            return false;
        }

        // Validate specification (only string characters)
        var specification = document.forms["orderForm"]["specification"].value;
        var specificationRegex =/.*/;
        if (!specification.match(specificationRegex)) {
            alert("Specification must contain only string characters");
            return false;
        }

        // Validate checklist quantity (only string characters)
        var checklistQuantity = document.forms["orderForm"]["checklistQuantity"].value;
        var checklistQuantityRegex =/.*/;
        if (!checklistQuantity.match(checklistQuantityRegex)) {
            alert("Checklist quantity must contain only string characters");
            return false;
        }
    }
</script>

<%- include('partials/footer') %>